    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script type="text/javascript">
        function showSuccessMessage(pTitle, pMessgae) {
            Swal.fire({
                icon: 'success',
                title: pTitle,
                text: pMessgae,
            });
        }

        function showErrorMessage(pTitle, pMessgae) {
            Swal.fire({
                icon: 'error',
                title: pTitle,
                text: pMessgae,
            });
        }
        function showSuccessMessageRedirect(pTitle, pMessage, pPath) {
            Swal.fire({
                icon: 'success',
                title: pTitle,
                html: pMessage,
            });
            var delayInMilliseconds = 2000;
            setTimeout(function () {
                window.location.href = pPath;
            }, delayInMilliseconds);
        }

        function showErrorMessageRedirect(pTitle, pMessage, pPath) {
            Swal.fire({
                icon: 'error',
                title: pTitle,
                html: pMessage,
            });
            var delayInMilliseconds = 2000;
            setTimeout(function () {
                window.location.href = pPath;
            }, delayInMilliseconds);
        }

    </script>
    <style>
